<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Xweight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/dark_theme_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_theme_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_theme_secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="background">@color/dark_theme_background</item>
        <item name="colorOnBackground">@color/dark_theme_on_background</item>

        <item name="colorSurface">@color/dark_theme_surface</item>
        <item name="colorOnSurface">@color/dark_theme_on_surface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
        <!-- Customize your theme here. -->
    </style>
</resources>